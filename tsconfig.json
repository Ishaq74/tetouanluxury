{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"],
      "@templates/*": ["src/components/templates/*"],
      "@assets/*": ["src/assets/*"],
      "@db/*": ["src/db/*"],
      "@images/*": ["public/images/*"],
      "@i18n/*": ["src/i18n/*"],
      "@hooks/*": ["src/hooks/*"],
      "@auth/*": ["src/auth/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}