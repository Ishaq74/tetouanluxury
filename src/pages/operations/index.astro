---
import MainLayout from '../../layouts/MainLayout.astro';

const lang = 'en';

// Mock data
const staff = {
  name: 'Maria Garcia',
  role: 'Housekeeping Staff',
};

const todaysTasks = [
  {
    id: '1',
    type: 'CLEANING',
    villa: 'Villa Azure',
    title: 'Deep Clean - Check-out Today',
    priority: 'HIGH',
    dueTime: '11:00 AM',
    status: 'TODO',
  },
  {
    id: '2',
    type: 'CLEANING',
    villa: 'Villa Serenity',
    title: 'Standard Clean',
    priority: 'MEDIUM',
    dueTime: '2:00 PM',
    status: 'TODO',
  },
  {
    id: '3',
    type: 'MAINTENANCE',
    villa: 'Villa Paradise',
    title: 'Pool Maintenance Check',
    priority: 'LOW',
    dueTime: '4:00 PM',
    status: 'TODO',
  },
];

const villaStatus = [
  { id: '1', name: 'Villa Azure', cleanliness: 'DIRTY', occupancy: 'VACANT', nextArrival: '2024-12-20' },
  { id: '2', name: 'Villa Serenity', cleanliness: 'CLEAN', occupancy: 'OCCUPIED', nextArrival: null },
  { id: '3', name: 'Villa Paradise', cleanliness: 'IN_PROGRESS', occupancy: 'VACANT', nextArrival: '2024-12-22' },
];
---

<MainLayout title="Operations - Staff Dashboard" lang={lang}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-primary text-white">
      <div class="container-custom py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold">Operations Dashboard</h1>
            <p class="text-gray-300">Welcome, {staff.name} ({staff.role})</p>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm">{new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' })}</span>
            <a href="/login" class="btn-secondary text-sm">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="bg-white border-b">
      <div class="container-custom">
        <nav class="flex space-x-6">
          <a href="/operations" class="px-4 py-3 border-b-2 border-accent font-medium text-accent">
            Tasks
          </a>
          <a href="/operations/status" class="px-4 py-3 border-b-2 border-transparent hover:text-accent transition-colors">
            Villa Status
          </a>
          <a href="/operations/schedule" class="px-4 py-3 border-b-2 border-transparent hover:text-accent transition-colors">
            Schedule
          </a>
          <a href="/operations/inventory" class="px-4 py-3 border-b-2 border-transparent hover:text-accent transition-colors">
            Inventory
          </a>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container-custom py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Tasks Column -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Today's Tasks -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-serif font-bold">Today's Tasks</h2>
              <span class="px-3 py-1 bg-accent text-white rounded-full text-sm">
                {todaysTasks.filter(t => t.status === 'TODO').length} pending
              </span>
            </div>

            <div class="space-y-4">
              {todaysTasks.map((task) => (
                <div class={`border-l-4 ${task.priority === 'HIGH' ? 'border-danger' : task.priority === 'MEDIUM' ? 'border-warning' : 'border-gray-300'} bg-gray-50 p-4 rounded-r-lg`}>
                  <div class="flex items-start justify-between mb-2">
                    <div>
                      <div class="flex items-center gap-2 mb-1">
                        <span class={`px-2 py-1 rounded text-xs font-medium ${
                          task.type === 'CLEANING' ? 'bg-blue-100 text-blue-700' : 'bg-purple-100 text-purple-700'
                        }`}>
                          {task.type}
                        </span>
                        <span class="text-sm text-gray-600">{task.villa}</span>
                      </div>
                      <h3 class="font-bold text-lg">{task.title}</h3>
                    </div>
                    <span class="text-sm font-medium text-gray-600">{task.dueTime}</span>
                  </div>

                  <div class="flex items-center gap-3 mt-4">
                    <button class="btn-primary text-sm">
                      Start Task
                    </button>
                    <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-100 text-sm">
                      View Details
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-lg font-bold mb-4">Quick Actions</h3>
            <div class="grid grid-cols-2 gap-4">
              <button class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-accent hover:bg-accent/5 transition-colors">
                <svg class="w-6 h-6 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <div class="text-left">
                  <p class="font-medium">Report Issue</p>
                  <p class="text-xs text-gray-600">Maintenance ticket</p>
                </div>
              </button>

              <button class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-accent hover:bg-accent/5 transition-colors">
                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
                <div class="text-left">
                  <p class="font-medium">Checklist</p>
                  <p class="text-xs text-gray-600">View procedures</p>
                </div>
              </button>

              <button class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-accent hover:bg-accent/5 transition-colors">
                <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-left">
                  <p class="font-medium">Mark Complete</p>
                  <p class="text-xs text-gray-600">Finish task</p>
                </div>
              </button>

              <button class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-accent hover:bg-accent/5 transition-colors">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div class="text-left">
                  <p class="font-medium">View Schedule</p>
                  <p class="text-xs text-gray-600">This week</p>
                </div>
              </button>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Villa Status Overview -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-lg font-bold mb-4">Villa Status</h3>
            <div class="space-y-3">
              {villaStatus.map((villa) => (
                <div class="p-3 border border-gray-200 rounded-lg">
                  <div class="flex items-center justify-between mb-2">
                    <p class="font-medium">{villa.name}</p>
                    <span class={`px-2 py-1 rounded-full text-xs ${
                      villa.cleanliness === 'CLEAN' ? 'bg-success/10 text-success' :
                      villa.cleanliness === 'IN_PROGRESS' ? 'bg-warning/10 text-warning' :
                      'bg-danger/10 text-danger'
                    }`}>
                      {villa.cleanliness === 'CLEAN' ? 'Clean' : villa.cleanliness === 'IN_PROGRESS' ? 'In Progress' : 'Dirty'}
                    </span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">
                      {villa.occupancy === 'OCCUPIED' ? 'ðŸ”´ Occupied' : 'ðŸŸ¢ Vacant'}
                    </span>
                    {villa.nextArrival && (
                      <span class="text-gray-600">
                        Next: {new Date(villa.nextArrival).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                      </span>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Stats Card -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-lg font-bold mb-4">Today's Stats</h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Tasks Completed</span>
                <span class="text-2xl font-bold text-success">0/3</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Hours Worked</span>
                <span class="text-2xl font-bold">0h 0m</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Performance</span>
                <span class="text-2xl font-bold text-accent">-</span>
              </div>
            </div>
          </div>

          <!-- Emergency Contact -->
          <div class="bg-danger/10 border border-danger rounded-lg p-4">
            <h3 class="font-bold text-danger mb-2">Emergency Contact</h3>
            <p class="text-sm text-gray-700 mb-2">For urgent issues, contact the manager immediately</p>
            <a href="tel:+212123456789" class="text-danger font-bold hover:underline">
              ðŸ“ž +212 123 456 789
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
