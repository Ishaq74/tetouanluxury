
---
import LoginForm from '@components/LoginForm.tsx';
const { lang, t } = Astro.locals;
// Simuler login/isLoading via Astro.actions ou mocks
let isLoading = { value: false };
function login(role, userData) {
  // Ici, on pourrait utiliser Astro.actions ou un appel API
  isLoading.value = true;
  setTimeout(() => { isLoading.value = false; }, 500);
}
---

<div class="min-h-screen flex bg-stone-50 animate-fade-in">
  <!-- SEO à réintégrer si composant disponible -->
  <!-- <SEO title={t('login_title', lang)} description={t('login_subtitle', lang)} /> -->
  <div class="hidden lg:block w-1/2 relative overflow-hidden">
    <img src="https://images.unsplash.com/photo-1542718610-a1d656d1884c?q=80&w=1920" class="absolute inset-0 w-full h-full object-cover animate-ken-burns" alt="Luxury Villa" />
    <div class="absolute inset-0 bg-slate-900/40 flex flex-col justify-end p-16 text-white">
      <h2 class="font-serif text-4xl mb-4">{t('login_welcome', lang)}</h2>
      <p class="text-slate-200 text-lg max-w-md">Connectez-vous pour gérer vos réservations, accéder à la conciergerie ou administrer les villas.</p>
    </div>
  </div>
  <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
    <LoginForm client:only lang={lang} t={t} login={login} isLoading={isLoading} />
  </div>
</div>

