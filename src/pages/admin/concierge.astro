---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';

// Mock concierge service requests
const serviceRequests = [
  {
    id: 'SR-001',
    clientName: 'John Smith',
    villaId: 'villa-1',
    villaName: 'Villa Azure',
    serviceType: 'Private Chef',
    price: 250,
    dateRequested: '2024-12-15',
    status: 'PENDING',
    notes: 'Dinner for 6 people, Mediterranean cuisine preferred',
  },
  {
    id: 'SR-002',
    clientName: 'Marie Dubois',
    villaId: 'villa-2',
    villaName: 'Villa Serenity',
    serviceType: 'Airport Transfer',
    price: 80,
    dateRequested: '2024-12-14',
    status: 'APPROVED',
    notes: 'Arrival at 14:30, Flight AF1234',
  },
  {
    id: 'SR-003',
    clientName: 'Ahmed Hassan',
    villaId: 'villa-3',
    villaName: 'Villa Paradise',
    serviceType: 'Spa & Massage',
    price: 180,
    dateRequested: '2024-12-16',
    status: 'PENDING',
    notes: 'Couples massage, 2 hours',
  },
  {
    id: 'SR-004',
    clientName: 'Sarah Johnson',
    villaId: 'villa-1',
    villaName: 'Villa Azure',
    serviceType: 'Excursion to Chefchaouen',
    price: 350,
    dateRequested: '2024-12-18',
    status: 'COMPLETED',
    notes: null,
  },
];
---

<MainLayout title="Concierge Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
              <a href="/admin/inventory" class="block px-4 py-2 rounded hover:bg-white/10">Inventory</a>
              <a href="/admin/concierge" class="block px-4 py-2 rounded bg-white/20">Concierge</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
              <a href="/admin/guide" class="block px-4 py-2 rounded hover:bg-white/10">Guide</a>
              <a href="/admin/services" class="block px-4 py-2 rounded hover:bg-white/10">Services</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8">
          <h1 class="text-4xl font-serif font-bold mb-2">Concierge Services</h1>
          <p class="text-gray-600">Manage guest service requests</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Pending Requests</h3>
              <svg class="w-8 h-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{serviceRequests.filter(r => r.status === 'PENDING').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Approved</h3>
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{serviceRequests.filter(r => r.status === 'APPROVED').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Completed</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{serviceRequests.filter(r => r.status === 'COMPLETED').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Total Revenue</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€{serviceRequests.reduce((sum, r) => sum + r.price, 0).toLocaleString()}</p>
          </div>
        </div>

        <!-- Service Requests Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {serviceRequests.map((request) => (
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col justify-between hover:border-accent transition relative overflow-hidden">
              {request.status === 'PENDING' && <div class="absolute top-0 left-0 w-1 h-full bg-warning"></div>}
              {request.status === 'APPROVED' && <div class="absolute top-0 left-0 w-1 h-full bg-success"></div>}
              {request.status === 'COMPLETED' && <div class="absolute top-0 left-0 w-1 h-full bg-accent"></div>}
              
              <div>
                <div class="flex justify-between items-start mb-4 pl-3">
                  <h4 class="font-bold text-gray-900 text-sm">{request.serviceType}</h4>
                  <span class="font-mono font-bold text-gray-700 text-sm">€{request.price}</span>
                </div>
                
                <div class="bg-gray-50 p-3 rounded mb-4 pl-3 border border-gray-100 text-xs space-y-1">
                  <p><span class="font-bold">Client:</span> {request.clientName}</p>
                  <p><span class="font-bold">Villa:</span> {request.villaName}</p>
                  <p><span class="font-bold">Date:</span> {new Date(request.dateRequested).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</p>
                  {request.notes && (
                    <p class="italic text-gray-500 border-t border-gray-200 pt-1 mt-1">"{request.notes}"</p>
                  )}
                </div>
              </div>
              
              <div class="flex justify-between items-center pl-3">
                <span class={`text-[10px] font-bold uppercase px-2 py-1 rounded ${
                  request.status === 'PENDING' ? 'bg-warning/10 text-warning' :
                  request.status === 'APPROVED' ? 'bg-success/10 text-success' :
                  'bg-gray-100 text-gray-500'
                }`}>
                  {request.status}
                </span>
                
                {request.status === 'PENDING' && (
                  <div class="flex space-x-2">
                    <button class="p-2 hover:bg-red-50 text-gray-400 hover:text-red-500 rounded" title="Reject">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                    <button class="p-2 bg-gray-900 text-white hover:bg-gray-800 rounded" title="Approve">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </button>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </main>
    </div>
  </div>
</MainLayout>
