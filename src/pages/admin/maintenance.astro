---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';

// Mock maintenance tickets
const tickets = [
  {
    id: 'MT-001',
    villa: 'Villa Azure',
    title: 'Pool heater not working',
    description: 'Pool temperature is not maintaining set point',
    priority: 'HIGH',
    status: 'OPEN',
    assignedTo: 'Ahmed Benali',
    createdDate: '2024-12-12',
    dueDate: '2024-12-13',
  },
  {
    id: 'MT-002',
    villa: 'Villa Serenity',
    title: 'Air conditioning unit making noise',
    description: 'Master bedroom AC making unusual sounds',
    priority: 'MEDIUM',
    status: 'IN_PROGRESS',
    assignedTo: 'Ahmed Benali',
    createdDate: '2024-12-10',
    dueDate: '2024-12-14',
  },
  {
    id: 'MT-003',
    villa: 'Villa Paradise',
    title: 'Garden irrigation system check',
    description: 'Scheduled monthly maintenance',
    priority: 'LOW',
    status: 'SCHEDULED',
    assignedTo: null,
    createdDate: '2024-12-08',
    dueDate: '2024-12-20',
  },
];
---

<MainLayout title="Maintenance Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded bg-white/20">Maintenance</a>
              <a href="/admin/inventory" class="block px-4 py-2 rounded hover:bg-white/10">Inventory</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8 flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-serif font-bold mb-2">Maintenance Management</h1>
            <p class="text-gray-600">Track and manage property maintenance</p>
          </div>
          <button class="btn-primary">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              New Ticket
            </span>
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Open Tickets</h3>
              <svg class="w-8 h-8 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{tickets.filter(t => t.status === 'OPEN').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">In Progress</h3>
              <svg class="w-8 h-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{tickets.filter(t => t.status === 'IN_PROGRESS').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Scheduled</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{tickets.filter(t => t.status === 'SCHEDULED').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">High Priority</h3>
              <svg class="w-8 h-8 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{tickets.filter(t => t.priority === 'HIGH').length}</p>
          </div>
        </div>

        <!-- Tickets Table -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-xl font-bold">Maintenance Tickets</h2>
              <div class="flex items-center gap-4">
                <select class="px-4 py-2 border border-gray-300 rounded-lg text-sm">
                  <option>All Statuses</option>
                  <option>Open</option>
                  <option>In Progress</option>
                  <option>Scheduled</option>
                  <option>Completed</option>
                </select>
                <select class="px-4 py-2 border border-gray-300 rounded-lg text-sm">
                  <option>All Priorities</option>
                  <option>High</option>
                  <option>Medium</option>
                  <option>Low</option>
                </select>
              </div>
            </div>
          </div>

          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Ticket #</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Villa</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Issue</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Priority</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Status</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Assigned To</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Due Date</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Actions</th>
              </tr>
            </thead>
            <tbody>
              {tickets.map((ticket) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="py-4 px-6 font-mono text-sm">{ticket.id}</td>
                  <td class="py-4 px-6 font-medium">{ticket.villa}</td>
                  <td class="py-4 px-6">
                    <div>
                      <div class="font-medium">{ticket.title}</div>
                      <div class="text-sm text-gray-600">{ticket.description}</div>
                    </div>
                  </td>
                  <td class="py-4 px-6">
                    {ticket.priority === 'HIGH' ? (
                      <span class="px-3 py-1 bg-danger/10 text-danger rounded-full text-sm font-medium">High</span>
                    ) : ticket.priority === 'MEDIUM' ? (
                      <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">Medium</span>
                    ) : (
                      <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">Low</span>
                    )}
                  </td>
                  <td class="py-4 px-6">
                    {ticket.status === 'OPEN' ? (
                      <span class="px-3 py-1 bg-danger/10 text-danger rounded-full text-sm">Open</span>
                    ) : ticket.status === 'IN_PROGRESS' ? (
                      <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">In Progress</span>
                    ) : ticket.status === 'SCHEDULED' ? (
                      <span class="px-3 py-1 bg-accent/10 text-accent rounded-full text-sm">Scheduled</span>
                    ) : (
                      <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Completed</span>
                    )}
                  </td>
                  <td class="py-4 px-6 text-sm">{ticket.assignedTo || <span class="text-gray-400 italic">Unassigned</span>}</td>
                  <td class="py-4 px-6 text-sm">{new Date(ticket.dueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</td>
                  <td class="py-4 px-6">
                    <div class="flex items-center gap-2">
                      <button class="p-2 hover:bg-gray-100 rounded" title="View">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded" title="Edit">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
