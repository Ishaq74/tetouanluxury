---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';

import { db } from '@db/index';
import { clients } from '@db/schema';
// import type { Client } from '../../../types';
const clientsList = await db.select().from(clients);
---

<MainLayout title="Client Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded bg-white/20">Clients & CRM</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas & Rates</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8 flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-serif font-bold mb-2">Client Management</h1>
            <p class="text-gray-600">Manage your client relationships and pipeline</p>
          </div>
          <button class="btn-primary">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Client
            </span>
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Total Clients</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{clientsList.length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">VIP Clients</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{clientsList.filter(c => c.status === 'VIP').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">New Leads</h3>
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{clientsList.filter(c => c.status === 'NEW').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Total Revenue</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€{clientsList.reduce((sum, c) => sum + Number(c.totalSpends), 0).toLocaleString()}</p>
          </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
              <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                <option>All Statuses</option>
                <option>VIP</option>
                <option>Returning</option>
                <option>New</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Pipeline Stage</label>
              <select class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                <option>All Stages</option>
                <option>New Lead</option>
                <option>Discussion</option>
                <option>Proposal</option>
                <option>Confirmed</option>
                <option>Post-Stay</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
              <input type="text" placeholder="Name, email, phone..." class="w-full px-4 py-2 border border-gray-300 rounded-lg" />
            </div>
            <div class="flex items-end">
              <button class="btn-primary w-full">Apply Filters</button>
            </div>
          </div>
        </div>

        <!-- Clients Table -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Client</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Contact</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Status</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Pipeline</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Stays</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Revenue</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Last Stay</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Actions</th>
              </tr>
            </thead>
            <tbody>
              {clientsList.map((client) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="py-4 px-6">
                    <div class="font-medium">{client.fullName}</div>
                    <div class="text-sm text-gray-600">{client.email}</div>
                  </td>
                  <td class="py-4 px-6 text-sm">{client.phone}</td>
                  <td class="py-4 px-6">
                    {client.status === 'VIP' ? (
                      <span class="px-3 py-1 bg-accent/10 text-accent rounded-full text-sm font-medium">VIP</span>
                    ) : client.status === 'RETURNING' ? (
                      <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Returning</span>
                    ) : (
                      <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm">New</span>
                    )}
                  </td>
                  <td class="py-4 px-6">
                    <span class="text-sm">{client.pipelineStage.replace('_', ' ')}</span>
                  </td>
                  <td class="py-4 px-6">{client.staysCount}</td>
                  <td class="py-4 px-6 font-medium">€{client.totalSpends.toLocaleString()}</td>
                  <td class="py-4 px-6 text-sm">
                    {client.lastStay ? new Date(client.lastStay).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : '-'}
                  </td>
                  <td class="py-4 px-6">
                    <div class="flex items-center gap-2">
                      <button class="p-2 hover:bg-gray-100 rounded" title="View">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded" title="Edit">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded" title="Contact">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
