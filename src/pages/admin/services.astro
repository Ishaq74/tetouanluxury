---
import MainLayout from '../../layouts/MainLayout.astro';

const lang = 'en';

// Mock premium services
const services = [
  {
    id: 'service-1',
    name: 'Private Chef',
    category: 'DINING',
    description: 'Professional chef preparing meals in your villa',
    price: 250,
    duration: '3 hours',
    availability: 'Available',
    bookings: 24,
    rating: 4.9,
  },
  {
    id: 'service-2',
    name: 'Airport Transfer',
    category: 'TRANSPORT',
    description: 'Luxury car transfer to/from airport',
    price: 80,
    duration: '1 hour',
    availability: 'Available',
    bookings: 45,
    rating: 4.8,
  },
  {
    id: 'service-3',
    name: 'Spa & Massage',
    category: 'WELLNESS',
    description: 'In-villa professional massage service',
    price: 180,
    duration: '2 hours',
    availability: 'Available',
    bookings: 32,
    rating: 4.9,
  },
  {
    id: 'service-4',
    name: 'Guided Excursion',
    category: 'ACTIVITIES',
    description: 'Day trip to Chefchaouen with guide',
    price: 350,
    duration: 'Full day',
    availability: 'Limited',
    bookings: 18,
    rating: 4.7,
  },
  {
    id: 'service-5',
    name: 'Yacht Charter',
    category: 'ACTIVITIES',
    description: 'Private yacht for coastal tour',
    price: 1200,
    duration: '4 hours',
    availability: 'By Request',
    bookings: 5,
    rating: 5.0,
  },
];
---

<MainLayout title="Services Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
              <a href="/admin/concierge" class="block px-4 py-2 rounded hover:bg-white/10">Concierge</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
              <a href="/admin/guide" class="block px-4 py-2 rounded hover:bg-white/10">Guide</a>
              <a href="/admin/services" class="block px-4 py-2 rounded bg-white/20">Services</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8 flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-serif font-bold mb-2">Premium Services Management</h1>
            <p class="text-gray-600">Manage luxury services catalog</p>
          </div>
          <button class="btn-primary">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              New Service
            </span>
          </button>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-gray-600 text-sm font-medium mb-2">Total Services</h3>
            <p class="text-3xl font-bold">{services.length}</p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-gray-600 text-sm font-medium mb-2">Total Bookings</h3>
            <p class="text-3xl font-bold">{services.reduce((sum, s) => sum + s.bookings, 0)}</p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-gray-600 text-sm font-medium mb-2">Avg. Rating</h3>
            <p class="text-3xl font-bold">{services.length > 0 ? (services.reduce((sum, s) => sum + s.rating, 0) / services.length).toFixed(1) : '0.0'} ⭐</p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-gray-600 text-sm font-medium mb-2">Revenue (Est.)</h3>
            <p class="text-3xl font-bold">€{(services.reduce((sum, s) => sum + (s.price * s.bookings), 0) / 1000).toFixed(1)}k</p>
          </div>
        </div>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {services.map((service) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-1">{service.name}</h3>
                    <span class="px-3 py-1 bg-accent/10 text-accent rounded-full text-xs font-medium uppercase">
                      {service.category}
                    </span>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-primary">€{service.price}</div>
                    <div class="text-xs text-gray-500">{service.duration}</div>
                  </div>
                </div>

                <p class="text-gray-600 text-sm mb-4">{service.description}</p>

                <div class="grid grid-cols-3 gap-4 mb-4 py-4 border-y border-gray-100">
                  <div class="text-center">
                    <div class="text-xs text-gray-500 mb-1">Bookings</div>
                    <div class="font-bold text-gray-900">{service.bookings}</div>
                  </div>
                  <div class="text-center">
                    <div class="text-xs text-gray-500 mb-1">Rating</div>
                    <div class="font-bold text-accent">★ {service.rating}</div>
                  </div>
                  <div class="text-center">
                    <div class="text-xs text-gray-500 mb-1">Status</div>
                    <div class={`text-xs font-bold ${
                      service.availability === 'Available' ? 'text-success' :
                      service.availability === 'Limited' ? 'text-warning' :
                      'text-gray-500'
                    }`}>
                      {service.availability}
                    </div>
                  </div>
                </div>

                <div class="flex gap-2">
                  <button class="flex-1 py-2 border border-gray-300 rounded text-sm font-medium hover:bg-gray-50 transition">
                    Edit
                  </button>
                  <button class="flex-1 py-2 border border-gray-300 rounded text-sm font-medium hover:bg-gray-50 transition">
                    View Details
                  </button>
                  <button class="p-2 border border-gray-300 rounded hover:bg-gray-50 transition">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </main>
    </div>
  </div>
</MainLayout>
