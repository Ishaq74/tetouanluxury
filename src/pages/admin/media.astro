---
import MainLayout from '../../layouts/MainLayout.astro';

const pageTitle = "Media Library | Admin Portal";

// Mock media data
const media = [
  { id: 1, name: 'villa-ocean-view-1.jpg', type: 'image', size: '2.4 MB', uploadedAt: '2024-12-10', url: '/images/villa1.jpg', dimensions: '1920x1080' },
  { id: 2, name: 'villa-mountain-2.jpg', type: 'image', size: '3.1 MB', uploadedAt: '2024-12-09', url: '/images/villa2.jpg', dimensions: '1920x1080' },
  { id: 3, name: 'villa-pool-3.jpg', type: 'image', size: '2.8 MB', uploadedAt: '2024-12-08', url: '/images/villa3.jpg', dimensions: '1920x1080' },
  { id: 4, name: 'interior-living-room.jpg', type: 'image', size: '2.2 MB', uploadedAt: '2024-12-07', url: '/images/interior1.jpg', dimensions: '1920x1080' },
  { id: 5, name: 'bedroom-suite.jpg', type: 'image', size: '1.9 MB', uploadedAt: '2024-12-06', url: '/images/bedroom.jpg', dimensions: '1920x1080' },
  { id: 6, name: 'kitchen-modern.jpg', type: 'image', size: '2.5 MB', uploadedAt: '2024-12-05', url: '/images/kitchen.jpg', dimensions: '1920x1080' },
  { id: 7, name: 'promotional-video.mp4', type: 'video', size: '45.2 MB', uploadedAt: '2024-12-04', url: '/videos/promo.mp4', duration: '2:30' },
  { id: 8, name: 'brand-logo.svg', type: 'document', size: '124 KB', uploadedAt: '2024-12-03', url: '/images/logo.svg', dimensions: '512x512' },
];

const categories = ['All', 'Images', 'Videos', 'Documents'];
const uploadStats = {
  totalFiles: media.length,
  totalSize: '62.3 MB',
  images: 6,
  videos: 1,
  documents: 1,
};
---

<MainLayout title={pageTitle}>
  <div class="min-h-screen bg-gray-50">
    <!-- Admin Sidebar -->
    <div class="flex">
      <aside class="w-64 bg-white shadow-lg h-screen fixed left-0 top-0 overflow-y-auto">
        <div class="p-6 border-b">
          <h1 class="text-2xl font-bold text-gray-800">Admin Portal</h1>
        </div>
        <nav class="p-4">
          <a href="/admin" class="block px-4 py-2 rounded hover:bg-gray-100">Dashboard</a>
          <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-gray-100">Villas</a>
          <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-gray-100">Bookings</a>
          <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-gray-100">Clients</a>
          <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-gray-100">Staff</a>
          <a href="/admin/finance" class="block px-4 py-2 rounded hover:bg-gray-100">Finance</a>
          <a href="/admin/marketing" class="block px-4 py-2 rounded hover:bg-gray-100">Marketing</a>
          <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-gray-100">Maintenance</a>
          <a href="/admin/inventory" class="block px-4 py-2 rounded hover:bg-gray-100">Inventory</a>
          <a href="/admin/concierge" class="block px-4 py-2 rounded hover:bg-gray-100">Concierge</a>
          <a href="/admin/guide" class="block px-4 py-2 rounded hover:bg-gray-100">Guide</a>
          <a href="/admin/services" class="block px-4 py-2 rounded hover:bg-gray-100">Services</a>
          <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-gray-100">Blog</a>
          <a href="/admin/media" class="block px-4 py-2 rounded bg-blue-100 text-blue-700">Media Library</a>
          <a href="/admin/settings" class="block px-4 py-2 rounded hover:bg-gray-100">Settings</a>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="ml-64 flex-1 p-8">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-gray-800 mb-2">Media Library</h2>
          <p class="text-gray-600">Manage all your images, videos, and documents</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Total Files</p>
                <p class="text-2xl font-bold text-gray-800">{uploadStats.totalFiles}</p>
              </div>
              <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Images</p>
                <p class="text-2xl font-bold text-gray-800">{uploadStats.images}</p>
              </div>
              <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Videos</p>
                <p class="text-2xl font-bold text-gray-800">{uploadStats.videos}</p>
              </div>
              <svg class="w-12 h-12 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Storage Used</p>
                <p class="text-2xl font-bold text-gray-800">{uploadStats.totalSize}</p>
              </div>
              <svg class="w-12 h-12 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Toolbar -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div class="flex items-center gap-4">
              <button class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                Upload Files
              </button>
              <div class="flex gap-2">
                {categories.map(cat => (
                  <button class={`px-4 py-2 rounded-md ${cat === 'All' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}>
                    {cat}
                  </button>
                ))}
              </div>
            </div>
            <div class="flex items-center gap-4">
              <input 
                type="search" 
                placeholder="Search media..." 
                class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
              <select class="px-4 py-2 border border-gray-300 rounded-md">
                <option>Sort by: Date</option>
                <option>Sort by: Name</option>
                <option>Sort by: Size</option>
              </select>
              <div class="flex gap-2">
                <button class="p-2 bg-gray-100 rounded hover:bg-gray-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                  </svg>
                </button>
                <button class="p-2 bg-blue-100 rounded">
                  <svg class="w-5 h-5 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Media Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
          {media.map(item => (
            <div class="bg-white rounded-lg shadow overflow-hidden group hover:shadow-lg transition-shadow cursor-pointer">
              <div class="relative aspect-video bg-gray-200 flex items-center justify-center">
                {item.type === 'image' ? (
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                ) : item.type === 'video' ? (
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                ) : (
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                )}
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100">
                  <div class="flex gap-2">
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                      </svg>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-red-50 text-red-600">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
              <div class="p-3">
                <p class="text-sm font-medium text-gray-800 truncate">{item.name}</p>
                <div class="flex items-center justify-between mt-1">
                  <span class="text-xs text-gray-500">{item.size}</span>
                  <span class="text-xs text-gray-400">{item.uploadedAt}</span>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Upload Dropzone (when activated) -->
        <div class="hidden mt-6 border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-blue-500 transition-colors">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          <p class="mt-4 text-lg font-medium text-gray-700">Drop files here or click to upload</p>
          <p class="mt-2 text-sm text-gray-500">Supported: JPG, PNG, GIF, MP4, PDF (Max 50MB)</p>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
