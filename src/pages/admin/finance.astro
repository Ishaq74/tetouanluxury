---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';

import { db } from '@db/index';
import { expenses, invoices } from '@db/schema';
const expensesList = await db.select().from(expenses);
const invoicesList = await db.select().from(invoices);

---

<MainLayout title="Finance Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas</a>
              <a href="/admin/finance" class="block px-4 py-2 rounded bg-white/20">Finance</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8">
          <h1 class="text-4xl font-serif font-bold mb-2">Finance Management</h1>
          <p class="text-gray-600">Track revenue, expenses, and invoices</p>
        </div>

        <!-- Financial Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Monthly Revenue</h3>
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€35,000</p>
            <p class="text-sm text-success mt-2">+25% from last month</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Monthly Expenses</h3>
              <svg class="w-8 h-8 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€6,200</p>
            <p class="text-sm text-gray-600 mt-2">18% of revenue</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Net Profit</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€28,800</p>
            <p class="text-sm text-success mt-2">+28% from last month</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Pending Invoices</h3>
              <svg class="w-8 h-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{invoicesList.filter(i => i.status === 'UNPAID' || i.status === 'OVERDUE').length}</p>
            <p class="text-sm text-gray-600 mt-2">€{invoicesList.filter(i => i.status === 'UNPAID' || i.status === 'OVERDUE').reduce((sum, i) => sum + Number(i.amount), 0).toLocaleString()}</p>
          </div>
        </div>

        <!-- Tabs -->
        <div class="bg-white rounded-lg shadow-lg mb-8">
          <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-6">
              <a href="#invoices" class="py-4 border-b-2 border-accent font-medium text-accent">Invoices</a>
              <a href="#expenses" class="py-4 border-b-2 border-transparent hover:text-accent transition-colors">Expenses</a>
              <a href="#reports" class="py-4 border-b-2 border-transparent hover:text-accent transition-colors">Reports</a>
            </nav>
          </div>

          <!-- Invoices Table -->
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xl font-bold">Recent Invoices</h2>
              <button class="btn-primary text-sm">
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  New Invoice
                </span>
              </button>
            </div>

            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Invoice #</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Client</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Booking</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Date</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Amount</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Status</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Actions</th>
                </tr>
              </thead>
              <tbody>
                {invoicesList.map((invoice) => (
                  <tr class="border-t hover:bg-gray-50">
                    <td class="py-3 px-4 font-mono text-sm">{invoice.id}</td>
                    <td class="py-3 px-4">{invoice.clientName}</td>
                    <td class="py-3 px-4 font-mono text-sm">{invoice.bookingId}</td>
                    <td class="py-3 px-4">{invoice.date ? new Date(invoice.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : ''}</td>
                    <td class="py-3 px-4 font-bold">€{Number(invoice.amount).toLocaleString()}</td>
                    <td class="py-3 px-4">
                      {invoice.status === 'PAID' ? (
                        <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Paid</span>
                      ) : (
                        <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">Pending</span>
                      )}
                    </td>
                    <td class="py-3 px-4">
                      <div class="flex items-center gap-2">
                        <button class="p-2 hover:bg-gray-100 rounded" title="View">
                          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                        </button>
                        <button class="p-2 hover:bg-gray-100 rounded" title="Download PDF">
                          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                        </button>
                        <button class="p-2 hover:bg-gray-100 rounded" title="Send">
                          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Expenses Section -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold">Recent Expenses</h2>
            <button class="btn-primary text-sm">
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Expense
              </span>
            </button>
          </div>

          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Date</th>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Category</th>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Description</th>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Villa</th>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Amount</th>
                <th class="text-left py-3 px-4 font-medium text-gray-600">Status</th>
              </tr>
            </thead>
            <tbody>
              {expensesList.map((expense) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="py-3 px-4">{new Date(expense.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</td>
                  <td class="py-3 px-4">
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                      {expense.category}
                    </span>
                  </td>
                  <td class="py-3 px-4">{expense.description}</td>
                  <td class="py-3 px-4 text-sm text-gray-600">{expense.supplierId}</td>
                  <td class="py-3 px-4 font-bold">€{Number(expense.amount)}</td>
                  <td class="py-3 px-4">
                    {expense.status === 'PAID' ? (
                      <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Paid</span>
                    ) : (
                      <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">Pending</span>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
