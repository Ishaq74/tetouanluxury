---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';

// Mock staff data
const staff = [
  {
    id: '1',
    name: 'Maria Garcia',
    role: 'STAFF_CLEANING',
    phone: '+212-600-123-456',
    email: 'maria.garcia@tetouanluxury.com',
    status: 'ACTIVE',
    performanceScore: 4.8,
    tasksCompleted: 45,
    schedule: 'Full-time',
  },
  {
    id: '2',
    name: 'Ahmed Benali',
    role: 'STAFF_MAINTENANCE',
    phone: '+212-600-123-457',
    email: 'ahmed.benali@tetouanluxury.com',
    status: 'ACTIVE',
    performanceScore: 4.9,
    tasksCompleted: 38,
    schedule: 'Full-time',
  },
  {
    id: '3',
    name: 'Sophie Martin',
    role: 'STAFF_CLEANING',
    phone: '+212-600-123-458',
    email: 'sophie.martin@tetouanluxury.com',
    status: 'ACTIVE',
    performanceScore: 4.7,
    tasksCompleted: 42,
    schedule: 'Part-time',
  },
  {
    id: '4',
    name: 'Hassan El Amrani',
    role: 'MANAGER',
    phone: '+212-600-123-459',
    email: 'hassan.elamrani@tetouanluxury.com',
    status: 'ACTIVE',
    performanceScore: 5.0,
    tasksCompleted: 120,
    schedule: 'Full-time',
  },
];
---

<MainLayout title="Staff Management - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10">Villas & Rates</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded bg-white/20">Staff & Schedule</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8 flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-serif font-bold mb-2">Staff Management</h1>
            <p class="text-gray-600">Manage your team and schedules</p>
          </div>
          <button class="btn-primary">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Staff Member
            </span>
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Total Staff</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{staff.length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Active Today</h3>
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{staff.filter(s => s.status === 'ACTIVE').length}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Avg Performance</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{(staff.reduce((sum, s) => sum + s.performanceScore, 0) / staff.length).toFixed(1)}</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-gray-600 text-sm font-medium">Tasks Completed</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">{staff.reduce((sum, s) => sum + s.tasksCompleted, 0)}</p>
          </div>
        </div>

        <!-- Staff Table -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Staff Member</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Role</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Contact</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Schedule</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Performance</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Tasks</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Status</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Actions</th>
              </tr>
            </thead>
            <tbody>
              {staff.map((member) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="py-4 px-6">
                    <div class="font-medium">{member.name}</div>
                    <div class="text-sm text-gray-600">{member.email}</div>
                  </td>
                  <td class="py-4 px-6">
                    <span class={`px-3 py-1 rounded-full text-sm ${
                      member.role === 'MANAGER' ? 'bg-accent/10 text-accent' :
                      member.role === 'STAFF_CLEANING' ? 'bg-blue-100 text-blue-700' :
                      'bg-purple-100 text-purple-700'
                    }`}>
                      {member.role === 'MANAGER' ? 'Manager' :
                       member.role === 'STAFF_CLEANING' ? 'Housekeeping' :
                       'Maintenance'}
                    </span>
                  </td>
                  <td class="py-4 px-6 text-sm">{member.phone}</td>
                  <td class="py-4 px-6">{member.schedule}</td>
                  <td class="py-4 px-6">
                    <div class="flex items-center gap-2">
                      <div class="flex items-center">
                        {Array.from({ length: 5 }).map((_, i) => (
                          <svg 
                            class={`w-4 h-4 ${i < Math.floor(member.performanceScore) ? 'text-accent' : 'text-gray-300'}`}
                            fill="currentColor" 
                            viewBox="0 0 20 20"
                          >
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                        ))}
                      </div>
                      <span class="text-sm font-medium">{member.performanceScore}</span>
                    </div>
                  </td>
                  <td class="py-4 px-6 font-medium">{member.tasksCompleted}</td>
                  <td class="py-4 px-6">
                    <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">
                      {member.status}
                    </span>
                  </td>
                  <td class="py-4 px-6">
                    <div class="flex items-center gap-2">
                      <button class="p-2 hover:bg-gray-100 rounded" title="View">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded" title="Edit">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded" title="Schedule">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
