---
import MainLayout from '../../layouts/MainLayout.astro';

const lang = 'en';

// Mock villas data - would come from database in production
const villas = [
  {
    id: '1',
    name: 'Villa Azure',
    pricePerNight: 450,
    bedrooms: 4,
    bathrooms: 3,
    isAvailable: true,
    maintenanceMode: false,
  },
  {
    id: '2',
    name: 'Villa Serenity',
    pricePerNight: 450,
    bedrooms: 4,
    bathrooms: 3,
    isAvailable: true,
    maintenanceMode: false,
  },
  {
    id: '3',
    name: 'Villa Paradise',
    pricePerNight: 450,
    bedrooms: 4,
    bathrooms: 3,
    isAvailable: false,
    maintenanceMode: false,
  },
];
---

<MainLayout title="Manage Villas - Admin" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">
            <a href="/admin">Admin Panel</a>
          </h2>
          
          <nav class="space-y-2">
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10">Bookings</a>
              <a href="/admin/clients" class="block px-4 py-2 rounded hover:bg-white/10">Clients</a>
              <a href="/admin/villas" class="block px-4 py-2 rounded bg-white/20">Villas & Rates</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10">Staff</a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10">Maintenance</a>
            </div>
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10">Blog</a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8 flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-serif font-bold mb-2">Manage Villas</h1>
            <p class="text-gray-600">Manage your property inventory</p>
          </div>
          <button class="btn-primary">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add New Villa
            </span>
          </button>
        </div>

        <!-- Villas Table -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Villa Name</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Price/Night</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Bedrooms</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Status</th>
                <th class="text-left py-4 px-6 font-medium text-gray-600">Actions</th>
              </tr>
            </thead>
            <tbody>
              {villas.map((villa) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="py-4 px-6">
                    <div class="font-medium">{villa.name}</div>
                  </td>
                  <td class="py-4 px-6">â‚¬{villa.pricePerNight}</td>
                  <td class="py-4 px-6">{villa.bedrooms} BR / {villa.bathrooms} BA</td>
                  <td class="py-4 px-6">
                    {villa.maintenanceMode ? (
                      <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">Maintenance</span>
                    ) : villa.isAvailable ? (
                      <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Available</span>
                    ) : (
                      <span class="px-3 py-1 bg-danger/10 text-danger rounded-full text-sm">Booked</span>
                    )}
                  </td>
                  <td class="py-4 px-6">
                    <div class="flex items-center gap-2">
                      <button class="p-2 hover:bg-gray-100 rounded">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      </button>
                      <button class="p-2 hover:bg-gray-100 rounded text-danger">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
