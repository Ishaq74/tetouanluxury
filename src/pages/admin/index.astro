---
import MainLayout from '@layouts/MainLayout.astro';

const lang = 'en';
---

<MainLayout title="Admin Dashboard - Tétouan Luxury Villas" lang={lang}>
  <div class="min-h-screen bg-gray-100">
    <!-- Admin Sidebar -->
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-primary text-white min-h-screen">
        <div class="p-6">
          <h2 class="text-2xl font-serif font-bold mb-8">Admin Panel</h2>
          
          <nav class="space-y-2">
            <!-- Commercial -->
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Commercial</h3>
              <a href="/admin/bookings" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Bookings
              </a>
              <a href="/admin/crm" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                CRM & Clients
              </a>
              <a href="/admin/villas" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Villas & Rates
              </a>
            </div>

            <!-- Operations -->
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Operations</h3>
              <a href="/admin/staff" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Staff & Schedule
              </a>
              <a href="/admin/maintenance" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Maintenance
              </a>
              <a href="/admin/inventory" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Inventory
              </a>
            </div>

            <!-- CMS -->
            <div class="mb-6">
              <h3 class="text-xs uppercase text-gray-400 mb-2">Content (CMS)</h3>
              <a href="/admin/blog" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Blog
              </a>
              <a href="/admin/guide" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Guide
              </a>
              <a href="/admin/media" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Media Library
              </a>
            </div>

            <!-- System -->
            <div>
              <h3 class="text-xs uppercase text-gray-400 mb-2">System</h3>
              <a href="/admin/settings" class="block px-4 py-2 rounded hover:bg-white/10 transition-colors">
                Settings
              </a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="mb-8">
          <h1 class="text-4xl font-serif font-bold mb-2">Dashboard Overview</h1>
          <p class="text-gray-600">Welcome back, Administrator</p>
        </div>

        <!-- KPI Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <!-- Revenue Card -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-gray-600 text-sm font-medium">Total Revenue</h3>
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">€125,400</p>
            <p class="text-sm text-success mt-2">+12.5% from last month</p>
          </div>

          <!-- Occupancy Card -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-gray-600 text-sm font-medium">Occupancy Rate</h3>
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">78%</p>
            <p class="text-sm text-gray-500 mt-2">5/7 villas booked</p>
          </div>

          <!-- Active Guests Card -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-gray-600 text-sm font-medium">Active Guests</h3>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">23</p>
            <p class="text-sm text-gray-500 mt-2">Across 5 villas</p>
          </div>

          <!-- Open Tickets Card -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-gray-600 text-sm font-medium">Open Tickets</h3>
              <svg class="w-8 h-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <p class="text-3xl font-bold">7</p>
            <p class="text-sm text-warning mt-2">2 urgent</p>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-serif font-bold mb-4">Recent Bookings</h2>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b">
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Ref</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Client</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Villa</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Dates</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Status</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Total</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3 px-4">#BK-2024-001</td>
                  <td class="py-3 px-4">John Smith</td>
                  <td class="py-3 px-4">Villa Azure</td>
                  <td class="py-3 px-4">Dec 20 - Dec 27</td>
                  <td class="py-3 px-4">
                    <span class="px-3 py-1 bg-success/10 text-success rounded-full text-sm">Confirmed</span>
                  </td>
                  <td class="py-3 px-4 font-medium">€3,150</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3 px-4">#BK-2024-002</td>
                  <td class="py-3 px-4">Marie Dubois</td>
                  <td class="py-3 px-4">Villa Serenity</td>
                  <td class="py-3 px-4">Dec 22 - Dec 29</td>
                  <td class="py-3 px-4">
                    <span class="px-3 py-1 bg-warning/10 text-warning rounded-full text-sm">Pending</span>
                  </td>
                  <td class="py-3 px-4 font-medium">€3,150</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
</MainLayout>
