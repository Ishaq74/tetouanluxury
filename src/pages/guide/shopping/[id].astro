---
import MainLayout from '@layouts/MainLayout.astro';

const { id } = Astro.params;
const lang = 'en';

// Mock data - in production this would come from the database
const shopping = {
  "1": {
    id: 1,
    name: "Artisan Souk",
    category: "shopping",
    description: "Guided tour through the historic UNESCO World Heritage medina. Explore the rich culture, architecture, and hidden gems of Tétouan's old city with expert local guides.",
    rating: 4.9,
    priceRange: "$$",
    type: "Cultural Tour",
    duration: "3 hours",
    location: "Old Medina, Tétouan",
    address: "Meeting point: Bab Er Rouah, Medina",
    phone: "+212 539 96 45 67",
    schedule: {
      weekdays: "9:00 AM, 2:00 PM",
      weekend: "9:00 AM, 11:00 AM, 2:00 PM"
    },
    images: [
      "/images/placeholder-shop.jpg",
      "/images/placeholder-shop.jpg"
    ],
    features: [
      "Expert Local Guide",
      "Small Groups (max 10)",
      "Historical Sites",
      "Photo Opportunities"
    ],
    highlights: [
      "UNESCO World Heritage Site",
      "Artisan workshops visit",
      "Traditional architecture",
      "Local market experience"
    ],
    reviews: [
      {
        author: "Michael R.",
        rating: 5,
        text: "Incredible tour! Our guide was knowledgeable and passionate. Best way to discover the medina!",
        date: "2024-01-18"
      }
    ]
  },
  "2": {
    id: 2,
    name: "Beach Horseback Riding",
    category: "shopping",
    description: "Scenic horseback riding along the Mediterranean coast",
    rating: 4.7,
    priceRange: "$$",
    type: "Outdoor Adventure",
    duration: "2 hours",
    location: "Martil Beach",
    address: "Martil Beach, Tétouan",
    phone: "+212 539 97 56 78",
    schedule: {
      weekdays: "Sunrise (7:00 AM), Sunset (5:30 PM)",
      weekend: "7:00 AM, 10:00 AM, 5:30 PM"
    },
    images: [
      "/images/placeholder-shop.jpg"
    ],
    features: [
      "All Skill Levels",
      "Equipment Provided",
      "Beach Access",
      "Sunset Option"
    ],
    highlights: [
      "Mediterranean views",
      "Professional instructors",
      "Photo package available",
      "Refreshments included"
    ],
    reviews: []
  },
  "3": {
    id: 3,
    name: "Cooking Class",
    category: "shopping",
    description: "Learn to prepare authentic Moroccan dishes with a local chef",
    rating: 4.8,
    priceRange: "$$$",
    type: "Culinary Experience",
    duration: "4 hours",
    location: "Cooking School, Tétouan",
    address: "12 Rue des Andalous, Tétouan",
    phone: "+212 539 98 67 89",
    schedule: {
      weekdays: "10:00 AM - 2:00 PM",
      weekend: "10:00 AM - 2:00 PM, 3:00 PM - 7:00 PM"
    },
    images: [
      "/images/placeholder-shop.jpg"
    ],
    features: [
      "Hands-on Cooking",
      "Market Visit",
      "Recipe Book Included",
      "Lunch Included"
    ],
    highlights: [
      "Traditional recipes",
      "Local market tour",
      "Family-style dining",
      "Vegetarian options"
    ],
    reviews: []
  }
};

const shop = shopping[id as keyof typeof shopping];

if (!shop) {
  return Astro.redirect('/guide/shopping');
}

// Similar shopping
const similarShopping = Object.values(shopping)
  .filter(a => a.id !== shop.id)
  .slice(0, 2);
---

<MainLayout title={`${shop.name} - Tétouan Guide`} lang={lang}>
  <div class="py-20">
    <div class="container-custom">
      <!-- Breadcrumb -->
      <div class="mb-8">
        <a href="/guide" class="text-primary hover:underline">Guide</a>
        <span class="mx-2">/</span>
        <a href="/guide/shopping" class="text-primary hover:underline">Shopping</a>
        <span class="mx-2">/</span>
        <span class="text-gray-600">{shop.name}</span>
      </div>

      <!-- Header -->
      <div class="mb-8">
        <div class="flex justify-between items-start mb-4">
          <h1 class="text-5xl font-serif font-bold">{shop.name}</h1>
          <span class="text-2xl font-semibold text-primary">{shop.priceRange}</span>
        </div>
        <div class="flex items-center gap-4 text-lg">
          <span class="flex items-center gap-2">
            <span class="text-yellow-500">★</span>
            <span class="font-semibold">{shop.rating}</span>
          </span>
          <span class="text-gray-600">•</span>
          <span class="text-gray-600">{shop.type}</span>
          <span class="text-gray-600">•</span>
          <span class="text-gray-600">{shop.duration}</span>
        </div>
      </div>

      <!-- Images Gallery -->
      <div class="grid md:grid-cols-3 gap-4 mb-12">
        {shop.images.map((img, idx) => (
          <div class={`${idx === 0 ? 'md:col-span-2 md:row-span-2' : ''} aspect-video bg-gray-200 rounded-lg overflow-hidden`}>
            <img src={img} alt={shop.name} class="w-full h-full object-cover" />
          </div>
        ))}
      </div>

      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <section class="mb-8">
            <h2 class="text-3xl font-serif font-bold mb-4">About</h2>
            <p class="text-lg text-gray-700 leading-relaxed">{shop.description}</p>
          </section>

          <section class="mb-8">
            <h2 class="text-3xl font-serif font-bold mb-4">Highlights</h2>
            <ul class="grid md:grid-cols-2 gap-3">
              {shop.highlights.map(highlight => (
                <li class="flex items-center gap-2">
                  <span class="text-primary">✓</span>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          </section>

          <section class="mb-8">
            <h2 class="text-3xl font-serif font-bold mb-4">Features</h2>
            <div class="flex flex-wrap gap-3">
              {shop.features.map(feature => (
                <span class="px-4 py-2 bg-primary/10 text-primary rounded-full text-sm font-medium">
                  {feature}
                </span>
              ))}
            </div>
          </section>

          {shop.reviews.length > 0 && (
            <section class="mb-8">
              <h2 class="text-3xl font-serif font-bold mb-6">Reviews</h2>
              <div class="space-y-6">
                {shop.reviews.map(review => (
                  <div class="border-l-4 border-primary pl-6 py-2">
                    <div class="flex items-center gap-4 mb-2">
                      <span class="font-semibold">{review.author}</span>
                      <span class="flex items-center gap-1 text-yellow-500">
                        {Array.from({ length: review.rating }).map(() => "★")}
                      </span>
                      <span class="text-sm text-gray-500">{review.date}</span>
                    </div>
                    <p class="text-gray-700">{review.text}</p>
                  </div>
                ))}
              </div>
            </section>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-gray-50 rounded-xl p-6 mb-6 sticky top-6">
            <h3 class="text-xl font-serif font-bold mb-4">Information</h3>
            
            <div class="space-y-4">
              <div>
                <p class="text-sm text-gray-500 mb-1">Meeting Point</p>
                <p class="font-medium">{shop.address}</p>
              </div>

              <div>
                <p class="text-sm text-gray-500 mb-1">Phone</p>
                <a href={`tel:${shop.phone}`} class="font-medium text-primary hover:underline">
                  {shop.phone}
                </a>
              </div>

              <div>
                <p class="text-sm text-gray-500 mb-1">Schedule</p>
                <p class="font-medium">Mon-Fri: {shop.schedule.weekdays}</p>
                <p class="font-medium">Sat-Sun: {shop.schedule.weekend}</p>
              </div>

              <div>
                <p class="text-sm text-gray-500 mb-1">Duration</p>
                <p class="font-medium">{shop.duration}</p>
              </div>
            </div>

            <div class="mt-6 space-y-3">
              <button class="w-full bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition">
                Book Now
              </button>
              <button class="w-full border border-primary text-primary px-6 py-3 rounded-lg font-semibold hover:bg-primary/5 transition">
                Contact
              </button>
            </div>
          </div>
        </div>
      </div>

      {similarShopping.length > 0 && (
        <section class="mt-16">
          <h2 class="text-3xl font-serif font-bold mb-8">Similar Shopping</h2>
          <div class="grid md:grid-cols-2 gap-8">
            {similarShopping.map(similar => (
              <a 
                href={`/guide/shopping/${similar.id}`}
                class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow"
              >
                <div class="aspect-video bg-gray-200">
                  <img src={similar.images[0]} alt={similar.name} class="w-full h-full object-cover" />
                </div>
                <div class="p-6">
                  <div class="flex justify-between items-start mb-2">
                    <h3 class="text-2xl font-serif font-bold">{similar.name}</h3>
                    <span class="text-primary font-semibold">{similar.priceRange}</span>
                  </div>
                  <p class="text-sm text-gray-500 mb-2">{similar.type} • {similar.duration}</p>
                  <p class="text-gray-600 mb-4">{similar.description}</p>
                  <div class="flex items-center gap-2">
                    <span class="text-yellow-500">★</span>
                    <span class="font-semibold">{similar.rating}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</MainLayout>
