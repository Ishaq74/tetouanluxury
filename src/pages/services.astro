---
import MainLayout from '../layouts/MainLayout.astro';
import { translations } from '../lib/translations';

const lang = 'en';
const t = translations[lang];
---

<MainLayout title="Services - Tétouan Luxury Villas" lang={lang}>
  <div class="py-20">
    <div class="container-custom">
      <h1 class="text-5xl font-serif font-bold mb-6 text-center">{t.nav_services}</h1>
      <p class="text-lg text-gray-600 mb-12 text-center max-w-2xl mx-auto">
        Enhance your stay with our premium concierge services designed to make your vacation unforgettable.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">Private Chef</h3>
          <p class="text-gray-600 mb-4">
            Enjoy gourmet meals prepared by our professional chefs in the comfort of your villa.
          </p>
          <p class="text-accent font-bold text-lg">From €150/meal</p>
        </div>

        <!-- Service 2 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">Airport Transfer</h3>
          <p class="text-gray-600 mb-4">
            Luxury car service with professional driver for airport pickup and drop-off.
          </p>
          <p class="text-accent font-bold text-lg">€80 one-way</p>
        </div>

        <!-- Service 3 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">Spa & Wellness</h3>
          <p class="text-gray-600 mb-4">
            In-villa spa treatments including massages, facials, and traditional hammam.
          </p>
          <p class="text-accent font-bold text-lg">From €120/session</p>
        </div>

        <!-- Service 4 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">Guided Tours</h3>
          <p class="text-gray-600 mb-4">
            Explore Tétouan and surrounding areas with our expert local guides.
          </p>
          <p class="text-accent font-bold text-lg">From €200/day</p>
        </div>

        <!-- Service 5 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">Grocery Delivery</h3>
          <p class="text-gray-600 mb-4">
            Pre-stock your villa with groceries and essentials before arrival.
          </p>
          <p class="text-accent font-bold text-lg">Free delivery</p>
        </div>

        <!-- Service 6 -->
        <div class="card text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold mb-4">24/7 Concierge</h3>
          <p class="text-gray-600 mb-4">
            Round-the-clock assistance for all your needs and special requests.
          </p>
          <p class="text-accent font-bold text-lg">Included</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
