---
import MainLayout from '../layouts/MainLayout.astro';

const lang = 'en';
---

<MainLayout title="Journal - Tétouan Luxury Villas" lang={lang}>
  <div class="py-20">
    <div class="container-custom">
      <h1 class="text-5xl font-serif font-bold mb-6 text-center">Journal</h1>
      <p class="text-lg text-gray-600 mb-12 text-center max-w-2xl mx-auto">
        Stories, news, and insights from Tétouan and our luxury villas.
      </p>
      <div class="text-center text-gray-500">
        <p>Blog posts coming soon...</p>
      </div>
    </div>
  </div>
</MainLayout>
