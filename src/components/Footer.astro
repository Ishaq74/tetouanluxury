---
import { translations } from '../lib/translations';
import type { Language } from '../lib/i18n';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = translations[lang as Language] || translations.en;
const currentYear = new Date().getFullYear();
---

<footer class="bg-primary text-white mt-20">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-2xl font-serif font-bold mb-4">Tétouan Luxury</h3>
        <p class="text-gray-300 mb-4">
          Experience the finest luxury villa rentals in Morocco's hidden gem, Tétouan.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2 text-gray-300">
          <li><a href={`/${lang === 'en' ? '' : lang}/villas`} class="hover:text-secondary transition-colors">{t.nav_villas}</a></li>
          <li><a href={`/${lang === 'en' ? '' : lang}/services`} class="hover:text-secondary transition-colors">{t.nav_services}</a></li>
          <li><a href={`/${lang === 'en' ? '' : lang}/journal`} class="hover:text-secondary transition-colors">{t.nav_journal}</a></li>
          <li><a href={`/${lang === 'en' ? '' : lang}/contact`} class="hover:text-secondary transition-colors">{t.nav_contact}</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <ul class="space-y-2 text-gray-300">
          <li>Cabo Negro, Tétouan</li>
          <li>Morocco</li>
          <li class="pt-2">
            <a href="mailto:contact@tetouanluxury.com" class="hover:text-secondary transition-colors">
              contact@tetouanluxury.com
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} Tétouan Luxury. {t.footer_rights}</p>
    </div>
  </div>
</footer>
